<project name="BarPush">

 <target name="run">
   <sequential>
   <git command = "clone">
    <args>
	    <arg value = "https://github.com/SureshPasula/PBC.git" />
        <arg value = "/home/spasula/GITREPOSITORY/PBC" />
    </args>
   </git> 
   <echo>This is for bar file sending to the git repository</echo>
   <git command = "init">
    <args>
        <arg value = "/home/spasula/GITREPOSITORY/PBC.git" />
    </args>
   </git> 
   <git command = "add">
    <args>
        <arg value = "/home/spasula/GITREPOSITORY/PBC/*.bar" />
    </args>
   </git> 
	<git command = "commit">
	  <args>
        <arg value = "-m" />
		<arg value = "This is bar file commiting message" />
      </args>
    </git>
   <git command = "push">
	  <args>
        <arg value = "origin" />
		<arg value = "https://github.com/SureshPasula/PBC.git" />
      </args>	 
   </git> 
 </sequential>   
 </target>
 
</project>